{
    "manifest_version": 2,
    "version": "1.0",
    "name": "QQ群助手",
    "description": "QQ群助手",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons": [
        {
            "src": "images/icon.png",
            "sizes": "128x128",
            "type": "image/png"
        }
    ],
    "browser_action": {
        "default_title": "test",
        "default_popup": "./popup.html",
        "default_icon": {
            "48": "./favicon.png"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": [
            "./css/content.css"
        ],
        "js": [
            "./js/chunk-vendors.js",
            "./js/content.js"
        ]
    }],
    "options_page": "options.html",
    "permissions": [
        "*://*/*"
    ],
    "background": {
        "scripts": [
            "./js/chunk-vendors.js",
            "./js/background.js"
        ],
        "popup": "background.html"
    }
}